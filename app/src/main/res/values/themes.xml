<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryLight">@color/default_primary_light</item>
        <item name="colorPrimaryDark">@color/default_primary_dark</item>
        <item name="textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/default_secondary</item>
        <item name="colorSecondaryLight">@color/night_primary_light</item>
        <item name="colorSecondaryDark">@color/default_secondary_dark</item>
        <item name="textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.NewsApp.NoActionBar">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
    </style>

    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.News.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="Theme.News.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Theme.Header.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="Theme.Header.Subtitle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
</resources>