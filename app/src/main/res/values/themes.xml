<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryLight">@color/night_primary_light</item>
        <item name="colorSecondaryDark">@color/secondary_dark</item>
        <item name="textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NyTimes.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="Theme.NyTimes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>