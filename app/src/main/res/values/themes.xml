<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ochre</item>
        <item name="colorPrimaryLight">@color/ochre_light</item>
        <item name="colorPrimaryDark">@color/ochre_dark</item>
        <item name="textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryLight">@color/grey_light</item>
        <item name="colorSecondaryDark">@color/gray_blue_dark</item>
        <item name="textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NyTimes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.NyTimes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>